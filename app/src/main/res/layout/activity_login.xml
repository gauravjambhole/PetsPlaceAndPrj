<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pet_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000" />

    <LinearLayout
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/petpalace_logo"
            android:transitionName="logo_transform"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:alpha="0"
            android:translationY="30dp"
            android:layout_marginBottom="25dp"/>

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:alpha="0"
            android:translationY="50dp"
            android:background="@drawable/input_round_bg"
            android:hint="Username"
            android:paddingStart="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:alpha="0"
            android:translationY="50dp"
            android:background="@drawable/input_round_bg"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:alpha="0"
            android:translationY="50dp"
            android:backgroundTint="@color/joyful_orange"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="28dp" />

        <TextView
            android:id="@+id/tvNewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="New user? Click here"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:alpha="0"
            android:translationY="40dp"
            android:padding="10dp"
            android:textStyle="italic" />

    </LinearLayout>
</FrameLayout>