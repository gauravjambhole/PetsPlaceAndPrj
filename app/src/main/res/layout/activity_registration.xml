<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pet_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/registration_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="30dp">

            <ImageView
                android:id="@+id/reg_logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/petpalace_logo"
                android:transitionName="logo_transform" />

            <TextView
                android:id="@+id/reg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha="0"
                android:text="Join the Palace"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:translationY="30dp" />

            <EditText
                android:id="@+id/etRegName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:alpha="0"
                android:background="@drawable/input_round_bg"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:translationY="40dp" />

            <LinearLayout
                android:id="@+id/layoutMobile"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:alpha="0"
                android:background="@drawable/input_round_bg"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:translationY="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="+91 "
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/etRegMobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC" />
            </LinearLayout>

            <EditText
                android:id="@+id/etRegEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:alpha="0"
                android:background="@drawable/input_round_bg"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:translationY="40dp" />

            <EditText
                android:id="@+id/etRegUsername"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:alpha="0"
                android:background="@drawable/input_round_bg"
                android:hint="Username"
                android:paddingStart="20dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:translationY="40dp" />

            <EditText
                android:id="@+id/etRegPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:alpha="0"
                android:background="@drawable/input_round_bg"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:translationY="40dp" />

            <CheckBox
                android:id="@+id/cbShowPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:alpha="0"
                android:buttonTint="#FFFFFF"
                android:text="Show Password"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:translationY="40dp" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                android:backgroundTint="#FF9800"
                android:text="Create Account"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:translationY="40dp"
                app:cornerRadius="28dp" />

            <TextView
                android:id="@+id/tvAlreadyAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:alpha="0"
                android:padding="10dp"
                android:text="Already have an account? Click here"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="italic"
                android:translationY="40dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>